<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CarRentalMobile.ViewModels"
             xmlns:models="clr-namespace:CarRentalMobile.Models"
             x:Class="CarRentalMobile.Views.CarsPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, *">
        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           Color="{AppThemeBinding Light=Blue, Dark=LightBlue}"
                           Margin="0,10,0,0" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Cars}" SelectionMode="None">
            <CollectionView.EmptyView>
                <ContentView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="Brak samochodów w tym mieście." FontSize="Medium" TextColor="Gray"/>
                        <Image Source="no_cars_found.png" WidthRequest="100" HeightRequest="100" />
                    </VerticalStackLayout>
                </ContentView>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Car">
                    <Frame Style="{StaticResource CardFrameStyle}" Margin="10,5">
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="5" VerticalOptions="StartAndExpand">
                                <Label Text="{Binding Brand}" FontAttributes="Bold" FontSize="Medium"/>
                                <Label Text="{Binding Model}" FontSize="Small" />
                                <Label Text="{Binding Year}" FontSize="Small" TextColor="Gray"/>
                                <Label Text="{Binding PricePerDay, StringFormat='Cena za dzień: {0:C}'}" FontSize="Small"/>
                                <Label Text="{Binding IsAvailable, StringFormat='Dostępny: {0}'}" FontSize="Small"/>

                                <Button Text="Zarezerwuj"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CarsViewModel}}, Path=GoToReservationDetailsCommand}"
                                        CommandParameter="{Binding .}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,10,0,0"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="1"
                                   Source="{Binding ImageUrl}"
                                   Aspect="AspectFill"      
                                   WidthRequest="100"      
                                   HeightRequest="100"     
                                   VerticalOptions="Start"   HorizontalOptions="End" 
                                   Margin="0,0,0,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>