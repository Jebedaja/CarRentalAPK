<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarRentalMobile.Views.ReservationPage"
             Title="Zarezerwuj Samochód">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Imię:" />
            <Entry x:Name="FirstNameEntry" Placeholder="Wpisz imię" />

            <Label Text="Nazwisko:" />
            <Entry x:Name="LastNameEntry" Placeholder="Wpisz nazwisko" />

            <Label Text="Wiek:" />
            <Entry x:Name="AgeEntry" Keyboard="Numeric" Placeholder="Wpisz wiek" />

            <Label Text="Liczba dni wynajmu:" />
            <Entry x:Name="DaysEntry" Keyboard="Numeric" Placeholder="Na ile dni?" />

            <Button Text="Zarezerwuj" Clicked="OnReserveClicked" BackgroundColor="Green" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

