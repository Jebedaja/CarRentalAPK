<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="ThisPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:CarRentalMobile.ViewModels"
    xmlns:models="clr-namespace:CarRentalMobile.Models"
    x:Class="CarRentalMobile.Views.ReservationsPage"
    Title="Moje Rezerwacje"
    NavigationPage.HasBackButton="True"
    NavigationPage.HasNavigationBar="True">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label
                Text="{Binding Reservations.Count, StringFormat='Ilość rezerwacji: {0}'}"
                FontSize="Large"
                TextColor="Blue" />

            <CollectionView
                ItemsSource="{Binding Reservations}"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Reservation">
                        <Frame
                            Margin="5"
                            Padding="10"
                            CornerRadius="10"
                            BorderColor="LightGray"
                            HasShadow="True">

                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Spacing="5" Grid.Row="0" Grid.Column="0">
                                    <Label Text="{Binding Car.Brand, StringFormat='Marka: {0}', TargetNullValue='Brak danych'}"/>
                                    <Label Text="{Binding Car.Model, StringFormat='Model: {0}', TargetNullValue='Brak danych'}"/>
                                    <Label Text="{Binding StartDate, StringFormat='Od: {0:yyyy-MM-dd}'}"/>
                                    <Label Text="{Binding EndDate, StringFormat='Do: {0:yyyy-MM-dd}'}"/>
                                    <Label Text="{Binding RentalDays, StringFormat='Dni: {0}'}"/>
                                    <Label Text="{Binding TotalCost, StringFormat='Całkowity koszt: {0:C}'}"/>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Rezerwujący: "/>
                                                <Span Text="{Binding FirstName}"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding LastName}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>

                                <Image Grid.Column="1" Grid.Row="0"
                                       Source="{Binding Car.ImageUrl}"
                                       Aspect="AspectFill"      
                                       WidthRequest="80"         
                                       HeightRequest="80"        
                                       HorizontalOptions="End"   
                                       VerticalOptions="Start"   
                                       Margin="5,0,0,0"/>

                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"              
                                    Grid.ColumnSpan="2"          
                                    Text="🗑️ Usuń"
                                    HorizontalOptions="End"      
                                    BackgroundColor="Transparent"
                                    TextColor="LightCoral"
                                    Command="{Binding BindingContext.DeleteReservationCommand, Source={x:Reference ThisPage}}"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>