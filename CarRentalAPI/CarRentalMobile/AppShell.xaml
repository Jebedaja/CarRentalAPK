<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarRentalMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarRentalMobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CarRentalMobile">

    <!-- Ustawienie domyślnej strony startowej -->
    <ShellContent
        Title="Menu Główne"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainMenuPage" />

    <!-- Możesz zarejestrować inne strony tutaj -->
    <ShellContent
        Title="Miasta"
        ContentTemplate="{DataTemplate local:CitiesPage}"
        Route="CitiesPage" />

    <Shell.FlyoutItems>
    </Shell.FlyoutItems>

    <!-- Style możesz zostawić bez zmian -->
    <Shell.Resources>
        <ResourceDictionary>
            <!-- ...style... -->
        </ResourceDictionary>
    </Shell.Resources>

</Shell>
