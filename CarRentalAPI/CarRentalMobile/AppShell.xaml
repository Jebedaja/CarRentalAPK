<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarRentalMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarRentalMobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CarRentalMobile">

    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate local:MainDashboardPage}"
        Route="MainDashboardPage" />

    <ShellContent
        Title="Miasta"
        ContentTemplate="{DataTemplate local:CitiesPage}"
        Route="CitiesPage"
        IsVisible="False" />
    <ShellContent
        Title="Moje rezerwacje"
        ContentTemplate="{DataTemplate local:MyReservationsPage}"
        Route="MyReservationsPage"
        IsVisible="False" />
    <ShellContent
        Title="MyReservations"
        ContentTemplate="{DataTemplate local:MyReservationsPage}"
        Route="MyReservationsPage" />
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Shell">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#45535E, Dark=#2B2B2B}" />
                <Setter Property="ForegroundColor" Value="White" />
                <Setter Property="TitleColor" Value="White" />
                <Setter Property="DisabledColor" Value="#B4FFFFFF" />
                <Setter Property="UnselectedColor" Value="#95FFFFFF" />
            </Style>

            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light=#45535E, Dark=#2B2B2B}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="White" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#95FFFFFF" />
                <Setter Property="Shell.TabBarDisabledColor" Value="#B4FFFFFF" />
            </Style>

            <Style TargetType="FlyoutItem">
            </Style>

        </ResourceDictionary>
    </Shell.Resources>

</Shell>